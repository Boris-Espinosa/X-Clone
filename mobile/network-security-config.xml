<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <domain-config cleartextTrafficPermitted="false">
        <!-- Dominios de Clerk -->
        <domain includeSubdomains="true">clerk.dev</domain>
        <domain includeSubdomains="true">clerk.com</domain>
        <domain includeSubdomains="true">accounts.dev</domain>
        
        <!-- Tu servidor en Vercel -->
        <domain includeSubdomains="true">vercel.app</domain>
        <domain includeSubdomains="true">tu-dominio-especifico.vercel.app</domain>
        
        <!-- MongoDB Atlas si lo usas directamente -->
        <domain includeSubdomains="true">mongodb.net</domain>
    </domain-config>
    
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </base-config>
</network-security-config>